#!/bin/sh -e

VERSION=`cat VERSION`

unset BCD_MATH
cd macdashboard
make clean
make
zip -r ../Free42Binary.zip Free42.wdgt
make clean
make -e BCD_MATH=1
zip -r ../Free42Decimal.zip Free42.wdgt
cd ..
zip Free42MacDashboard.$VERSION.zip Free42Binary.zip Free42Decimal.zip
rm Free42Binary.zip Free42Decimal.zip
